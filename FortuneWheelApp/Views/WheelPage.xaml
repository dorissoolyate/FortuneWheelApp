<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Views.WheelPage"
             Title="Fortune Wheel">
    <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
        <Label Text="Spin the Wheel!" FontSize="24" HorizontalOptions="Center" />
        <Image x:Name="WheelImage" Source="wheel.png" WidthRequest="300" HeightRequest="300" HorizontalOptions="Center" />
        <Button Text="Spin the Wheel" Clicked="OnSpinClicked" />
    </VerticalStackLayout>
</ContentPage>
